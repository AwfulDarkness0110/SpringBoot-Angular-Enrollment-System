<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xmlns:jsr107='http://www.ehcache.org/v3/jsr107'>

    <service>
        <jsr107:defaults default-template="default" enable-management="false" enable-statistics="false">
        </jsr107:defaults>
<!--        <jsr107:defaults enable-management="false" enable-statistics="false">-->
<!--        </jsr107:defaults>-->
<!--        <jsr107:defaults default-template="default">-->
<!--        </jsr107:defaults>-->
    </service>


<!--    &lt;!&ndash; Persistent cache directory &ndash;&gt;-->
<!--    <persistence directory="spring-boot-ehcache/cache"/>-->

    <!-- Default cache template -->
    <cache-template name="default">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="seconds">900</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">2</offheap>
        </resources>
    </cache-template>

    <cache-template name="small">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="seconds">900</ttl>
        </expiry>
        <resources>
            <heap unit="entries">100</heap>
        </resources>
    </cache-template>

    <cache-template name="medium">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="seconds">900</ttl>
        </expiry>
        <resources>
            <heap unit="entries">5000</heap>
            <offheap unit="MB">20</offheap>
        </resources>
    </cache-template>

<!--    <cache-template name="large">-->
<!--        <key-type>java.lang.Object</key-type>-->
<!--        <value-type>java.lang.Object</value-type>-->
<!--        <expiry>-->
<!--            <ttl unit="seconds">600</ttl>-->
<!--        </expiry>-->
